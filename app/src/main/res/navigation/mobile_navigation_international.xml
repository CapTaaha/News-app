<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation_international"
    app:startDestination="@id/nav_home_international">

    <!--These fragments are made to work on
        all the items listed in navigation drawer
        so that there java files can be managed separately -->

    <!-- Fragment for BBC-->
    <fragment
        android:id="@+id/nav_home_international"
        android:name="com.example.news.ui.home_international.HomeInternationalFragment"
        android:label="BBC"
        tools:layout="@layout/fragment_home_international" />

    <!-- Fragment for Fox News-->
    <fragment
        android:id="@+id/nav_gallery_international"
        android:name="com.example.news.ui.gallery_international.GalleryInternationalFragment"
        android:label="Fox News"
        tools:layout="@layout/fragment_gallery_international" />

    <!-- Fragment for CNN-->
    <fragment
        android:id="@+id/nav_slideshow_international"
        android:name="com.example.news.ui.slideshow_international.SlideshowInternationalFragment"
        android:label="CNN"
        tools:layout="@layout/fragment_slideshow_international" />

    <!-- Fragment for MSNBC-->
    <fragment
        android:id="@+id/nav_window_international"
        android:name="com.example.news.ui.window_international.WindowInternationalFragment"
        android:label="MSNBC"
        tools:layout="@layout/fragment_window_international" />

</navigation>
