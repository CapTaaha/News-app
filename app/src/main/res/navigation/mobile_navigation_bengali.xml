<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation_bengali"
    app:startDestination="@id/nav_gallery_bengali">

    <!--These fragments are made to work on
        all the items listed in navigation drawer
        so that there java files can be managed separately -->

    <!-- Fragment for Kolkata TV-->
    <fragment
        android:id="@+id/nav_home_bengali"
        android:name="com.example.news.ui.home_bengali.HomeBengaliFragment"
        android:label="Kolkata TV"
        tools:layout="@layout/fragment_home_bengali" />

    <!-- Fragment for News 18-->
    <fragment
        android:id="@+id/nav_gallery_bengali"
        android:name="com.example.news.ui.gallery_bengali.GalleryBengaliFragment"
        android:label="News 18"
        tools:layout="@layout/fragment_gallery_bengali" />

    <!-- Fragment for Zee 24 Ghanta-->
    <fragment
        android:id="@+id/nav_slideshow_bengali"
        android:name="com.example.news.ui.slideshow_bengali.SlideshowBengaliFragment"
        android:label="Zee 24 Ghanta"
        tools:layout="@layout/fragment_slideshow_bengali" />

    <!-- Fragment for APB Ananda-->
    <fragment
        android:id="@+id/nav_window_bengali"
        android:name="com.example.news.ui.window_bengali.WindowBengaliFragment"
        android:label="ABP Ananda"
        tools:layout="@layout/fragment_window_bengali" />

</navigation>
