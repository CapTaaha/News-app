<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.news">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.News">
        <activity
            android:name=".MainActivityInternational"
            android:exported="true"
            android:label="@string/title_activity_main_international"
            android:parentActivityName=".Languages"
            android:theme="@style/Theme.News.NoActionBar" />
        <activity
            android:name=".MainActivityBengali"
            android:exported="true"
            android:label="@string/title_activity_main_bengali"
            android:parentActivityName=".Languages"
            android:theme="@style/Theme.News.NoActionBar" />
        <activity
            android:name=".MainActivityTelugu"
            android:exported="true"
            android:label="@string/title_activity_main_telugu"
            android:parentActivityName=".Languages"
            android:theme="@style/Theme.News.NoActionBar" />
        <activity
            android:name=".MainActivityHindi"
            android:exported="true"
            android:label="@string/title_activity_main_hindi"
            android:parentActivityName=".Languages"
            android:theme="@style/Theme.News.NoActionBar" />
        <activity
            android:name=".MainActivityEnglish"
            android:exported="true"
            android:label="@string/title_activity_main_english"
            android:parentActivityName=".Languages"
            android:theme="@style/Theme.News.NoActionBar" />
        <activity
            android:name=".Languages"
            android:exported="true"
            android:label="Languages"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="News">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>